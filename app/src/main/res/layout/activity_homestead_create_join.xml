<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomesteadCreateJoinActivity">

    <EditText
        android:id="@+id/createHomesteadName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Name your Homestead"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/createJoinHomesteadTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/createJoinHomesteadTitleTextView" />

    <TextView
        android:id="@+id/createJoinHomesteadTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Create or join a Homestead"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createHomesteadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Create new Homestead"
        app:layout_constraintStart_toStartOf="@+id/createJoinHomesteadTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/createHomesteadName" />

    <Button
        android:id="@+id/joinHomesteadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Join a Homestead"
        app:layout_constraintStart_toStartOf="@+id/createJoinHomesteadTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/createHomesteadButton" />
</android.support.constraint.ConstraintLayout>